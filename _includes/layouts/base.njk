<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <meta property="og:title" content="{{ renderData.title or title or metadata.title }}">
    <meta property="og:description" content="{{ renderData.description or description or metadata.description }}">
    <meta property="og:image" content="{{ renderData.image or image or 'https://res.cloudinary.com/djrxspb6p/image/upload/v1630442463/og-social-image_qakkx4.jpg' }}">
    <meta property="og:url" content="{{ page.url }}">
    <meta property="og:type" content="article">
    <meta property="og:site_name" content="samantha-andrews.com">
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@samandrewsmakes" />
    <meta name="twitter:creator" content="@samandrewsmakes" />
    <meta name="twitter:image:src" content="{{ renderData.image or image or 'https://res.cloudinary.com/djrxspb6p/image/upload/v1630442463/og-social-image_qakkx4.jpg' }}" />
    <meta name="twitter:image:alt" property="og:image:alt" content="{{ renderData.title or title or metadata.title }}" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@700&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="header">
      <a class="logo" href="{{ '/' | url }}"><img src="https://res.cloudinary.com/djrxspb6p/image/upload/v1658106907/logo_tpishx.png" alt="green, purple, orange, and pink square gradient logo icon"/></a>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <nav>
        <ul class="nav" style="padding-inline-start: 0;">
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="nav__item{% if entry.url == page.url %} nav__item-active{% endif %}">
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
        </ul>
      </nav>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer class="footer">
      <div class="footer__links">
        <div>
          <p class="footer__link">
            <a href="{{ metadata.etsy }}">Etsy Store</a>
          </p>
          <p class="footer__link">
            <a href="{{ metadata.youtube }}">YouTube</a>
          </p>
        </div>
        <div>
          <p class="footer__link">
            <a href="mailto:{{ metadata.email }}">hello@samantha-andrews.com</a>
          </p>
          <p class="footer__link">Made with â™¥ in Brooklyn, NY</p>
        </div>
      </div>
    </footer>

    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
    <script data-goatcounter="https://samandrews.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
  </body>
</html>
